@page
@model CESIM.Pages.Estudiantes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Estudiantes</h1>

<h4>Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Estudiante.estudianteID" />
            <div class="form-group">
                <label asp-for="Estudiante.tutorID" class="control-label"></label>
                <select asp-for="Estudiante.tutorID" class="form-control" asp-items="ViewBag.tutorID"></select>
                <span asp-validation-for="Estudiante.tutorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Nombres" class="control-label"></label>
                <input asp-for="Estudiante.Nombres" class="form-control" />
                <span asp-validation-for="Estudiante.Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Apellidos" class="control-label"></label>
                <input asp-for="Estudiante.Apellidos" class="form-control" />
                <span asp-validation-for="Estudiante.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Sexo" class="control-label"></label>
                <select asp-for="Estudiante.Sexo" class="form-control" asp-items="ViewBag.Sexo">
                    <option>Selecione el Genero</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>

                    >
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Nacimiento" class="control-label"></label>
                <input asp-for="Estudiante.Nacimiento" class="form-control" />
                <span asp-validation-for="Estudiante.Nacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estudiante.Codigo" class="control-label"></label>
                <input asp-for="Estudiante.Codigo" class="form-control" />
                <span asp-validation-for="Estudiante.Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver al menu principal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

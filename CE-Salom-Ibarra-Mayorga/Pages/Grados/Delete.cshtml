@page
@model CESIM.Pages.Grados.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Grados</h1>

<h3>¿Desea eliminar este grado?</h3>
<div>
    <h4>Grado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grado.Nivel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grado.Nivel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grado.Seccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grado.Seccion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grado.Docente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grado.Docente.Nombres)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Grado.gradoID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a el menu principal</a>
    </form>
</div>

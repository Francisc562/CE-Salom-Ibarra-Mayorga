@page
@model CESIM.Pages.Docentes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Docentes</h1>

<p>
    <a asp-page="Create">Agregar un nuevo Docente</a>
</p>
<table class="table" >
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Especialidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente[0].Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Docente) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.docenteID">Actualizar</a> |
                <a asp-page="./Details" asp-route-id="@item.docenteID">Ver</a> |
                <a asp-page="./Delete" asp-route-id="@item.docenteID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model CESIM.Pages.Matriculas.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Matricula </h1>

<h3>¿Desea eliminar este registro?</h3>
<div>
    <h4>Matricula</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Matricula.Seccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Matricula.Seccion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Matricula.Grado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Matricula.Grado.Nivel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Matricula.Estudiante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Matricula.Estudiante.Nombres)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Matricula.matriculaID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a el menu principal</a>
    </form>
</div>
